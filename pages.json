{
	"easycom": {
		"autoscan": true,
		"custom": {
			// uni-ui 规则如下配置
			"^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue"
		}
	},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index1",
			"style": {
				"navigationBarTitleText": "超然地图"
			}
		}, {
			"path": "pages/index2",
			"style": {
				"navigationBarTitleText": "超然地图",
				"enablePullDownRefresh": false
			}

		}, {
			"path": "pages/index3",
			"style": {
				"navigationBarTitleText": "超然地图",
				"enablePullDownRefresh": false
			}

		}, {
			"path": "pages/index4",
			"style": {
				"navigationBarTitleText": "超然地图",
				"enablePullDownRefresh": false
			}

		}
        ,{
            "path" : "pages/components/uniFab",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "",
                "enablePullDownRefresh": false
            }
            
        }
        ,{
            "path" : "pages/components/notice-bar/notice-bar",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "",
                "enablePullDownRefresh": false
            }
            
        }
    ],
	"globalStyle": {
		"pageOrientation": "portrait",
		"navigationBarTitleText": "Hello uniapp",
		"navigationBarTextStyle": "white",
		"navigationBarBackgroundColor": "#007AFF",
		"backgroundColor": "#F8F8F8",
		"backgroundColorTop": "#F4F5F6",
		"backgroundColorBottom": "#F4F5F6",
		"mp-360": {
			"navigationStyle": "custom"
		},
		"h5": {
			"maxWidth": 1190,
			"navigationBarTextStyle": "black",
			"navigationBarBackgroundColor": "#F1F1F1"
		}
	},
	"uniIdRouter": {},
	"tabBar": {
		"color": "#7A7E83",
		"selectedColor": "#007AFF",
		"borderStyle": "black",
		"backgroundColor": "#F8F8F8",
		"list": [{
				"pagePath": "pages/index1",
				"iconPath": "static/home.jpg",
				"selectedIconPath": "static/home_active.jpg",
				"text": "主页"
			},
			{
				"pagePath": "pages/index4",
				"iconPath": "static/myself.png",
				"selectedIconPath": "static/myself_active.png",
				"text": "我的"
			}
		]
	}

}